{
  "name": "turborepo-basic-shared",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "lint-fix": "eslint --ext .js,.jsx,.ts,.tsx src --color --fix && npm run format",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "editor": "turbo run editor"
  },
  "devDependencies": {
    "@swc/core": "^1.2.165",
    "@swc/jest": "^0.2.20",
    "@types/node": "^17.0.24",
    "@types/react": "^18.0.5",
    "@typescript-eslint/parser": "^5.20.0",
    "add": "^2.0.6",
    "eslint": "7.32.0",
    "jest": "^27.5.1",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "turbo": "^1.2.4",
    "typescript": "^4.6.3"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@6.32.3",
  "nohoist": ["**/electron"],
  "dependencies": {
    "@babel/core": "^7.17.9",
    "create-ink-app": "^2.1.2",
    "next": "12.0.8",
    "react": "^18.0.0",
    "react-dom": "17.0.2"
  }
}