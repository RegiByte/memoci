{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Cli Package",
  "extends": "./base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "downlevelIteration": false,
    "lib": [
      "ES2015"
    ],
    "module": "CommonJS",
    "target": "ES6",
    "jsx": "react-jsx",
    "allowJs": true,
    "types": [
      "jest"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "tests",
    "node_modules"
  ]
}
